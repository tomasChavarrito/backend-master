<h1>Cart</h1>
<div id="{{cartId}}" class="cart-list">
{{#if products}}
    {{#each products}}
        <div id={{product._id}} class="product-item">
            <p>{{product.title}}</p>
            <p>{{product.price}}</p>
            <p>amount: {{quantity}}</p>
            <button onclick="removeProduct(event)">Remove</button>
        </div>
    {{/each}}
{{else}}
    <p>The cart is empty</p>
{{/if}}
</div>

<script src="/statics/js/cart.js"></script>